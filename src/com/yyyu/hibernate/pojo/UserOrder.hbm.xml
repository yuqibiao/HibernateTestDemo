<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.yyyu.hibernate.pojo.UserOrder" table="user_order">
        <id name="o_id" column="o_id" >
            <generator class="native"/>
        </id>
        <property name="createTime" column="create_time"/>
        <property name="tip" column="tip"/>
        <!--
        name：引用属性名
        column：外键列名（从表中）
        class：与我关联对象的完整类名
        -->
        <many-to-one name="user" column="user_id" class="com.yyyu.hibernate.pojo.User" cascade="save-update"/>
    </class>

</hibernate-mapping>